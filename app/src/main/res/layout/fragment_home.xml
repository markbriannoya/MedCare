<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customfont="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
                android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="20dp"
            android:padding="20dp">

            <View style="@style/TopHeaderDesign"
                android:background="#c62828"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingRight="10dp"
                android:paddingLeft="15dp"
                android:paddingTop="20dp"
                android:paddingBottom="10dp">

                <com.febaisi.CustomTextView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="Blood Pressure"
                    android:textColor="#DD000000"
                    app:typeface="Roboto-Medium.ttf"
                    android:paddingBottom="5dp" />

                <View style="@style/Divider"
                    android:layout_marginBottom="5dp" />


                <com.febaisi.CustomTextView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="11dp"
                    android:text="Last Blood Pressure"
                    android:textColor="#95989A"
                    app:typeface="Roboto-Regular.ttf" />

                <com.febaisi.CustomTextView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/bloodpressure"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="31dp"
                    android:text="--/--"
                    android:textColor="#95989A"
                    app:typeface="Roboto-Regular.ttf"
                    android:paddingBottom="5dp" />

                <com.febaisi.CustomTextView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/bloodrecord"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:text="RECORD"
                    android:textColor="#2979ff"
                    app:typeface="Roboto-Medium.ttf"
                    android:gravity="end"
                    android:clickable="true"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="20dp">

                <View style="@style/TopHeaderDesign"
                    android:background="#42a5f5"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingRight="10dp"
                    android:paddingLeft="15dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="10dp">

                    <com.febaisi.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:text="Calorie Intake"
                        android:textColor="#DD000000"
                        customfont:typeface="Roboto-Medium.ttf"
                        android:paddingBottom="5dp" />

                    <View style="@style/Divider"
                        android:layout_marginBottom="5dp" />


                    <com.febaisi.CustomTextView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="11dp"
                        android:text="Today's Calorie Intake"
                        android:textColor="#95989A"
                        app:typeface="Roboto-Regular.ttf" />

                    <com.febaisi.CustomTextView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="31dp"
                        android:text="800 cal"
                        android:textColor="#95989A"
                        app:typeface="Roboto-Regular.ttf"
                        android:paddingBottom="5dp" />

                    <com.febaisi.CustomTextView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:text="RECORD"
                        android:textColor="#2979ff"
                        app:typeface="Roboto-Medium.ttf"
                        android:gravity="right" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="20dp"
                android:padding="20dp">

                <View style="@style/TopHeaderDesign"
                    android:background="#ffe57f"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingRight="10dp"
                    android:paddingLeft="15dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="10dp">

                    <com.febaisi.CustomTextView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:text="Medicine Intake"
                        android:textColor="#DD000000"
                        app:typeface="Roboto-Medium.ttf"
                        android:paddingBottom="5dp" />

                    <View style="@style/Divider"
                        android:layout_marginBottom="5dp" />


                    <com.febaisi.CustomTextView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="11dp"
                        android:text="Next Intake"
                        android:textColor="#95989A"
                        app:typeface="Roboto-Regular.ttf" />

                    <com.febaisi.CustomTextView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="31dp"
                        android:text="Paracetamol"
                        android:textColor="#95989A"
                        app:typeface="Roboto-Regular.ttf"
                        android:paddingBottom="5dp" />

                    <com.febaisi.CustomTextView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:text="RECORD"
                        android:textColor="#2979ff"
                        app:typeface="Roboto-Medium.ttf"
                        android:gravity="right" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="20dp"
                android:padding="20dp"
                android:layout_marginBottom="20dp">

                <View style="@style/TopHeaderDesign"
                    android:background="#6a1b9a"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingRight="10dp"
                    android:paddingLeft="15dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="10dp">

                    <com.febaisi.CustomTextView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:text="Weight"
                        android:textColor="#DD000000"
                        app:typeface="Roboto-Medium.ttf"
                        android:paddingBottom="5dp" />

                    <View style="@style/Divider"
                        android:layout_marginBottom="5dp" />


                    <com.febaisi.CustomTextView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="11dp"
                        android:text="Your Last Recorded Weight"
                        android:textColor="#95989A"
                        app:typeface="Roboto-Regular.ttf" />

                    <com.febaisi.CustomTextView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="31dp"
                        android:text="65kg"
                        android:textColor="#95989A"
                        app:typeface="Roboto-Regular.ttf"
                        android:paddingBottom="5dp" />

                    <com.febaisi.CustomTextView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:text="RECORD"
                        android:textColor="#2979ff"
                        app:typeface="Roboto-Medium.ttf"
                        android:gravity="right" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
